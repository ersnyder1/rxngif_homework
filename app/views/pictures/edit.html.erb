<h1>Edit an Existing Picture</h1>

<%= form_tag(edit_picture_url(@id), :method => "patch") do %>
  <div>
    <label for="the_caption">Caption:</label>
    <%= text_field_tag :source, @picture_caption %>
  </div>
  <div>
    <label for="image_url">Image URL:</label>
    <%= text_field_tag :source, @picture_source %>
  </div>
  <div>
    <input type="submit" value="Update Picture">
  </div>
<% end %>